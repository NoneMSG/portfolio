<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.example.bit_user.sms.ReadWeeklyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/txt_underline"
        android:paddingBottom="12dp">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/txtDep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_basic"
                android:text=" department" />

            <TextView
                android:id="@+id/txtLeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_basic"
                android:layout_weight="1"
                android:text=" Leader" />

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_basic"
                android:text=" name" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <TextView
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_basic"
                android:layout_weight="1"
                android:text=" date" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="[주간 계획]"
        android:textColor="#333"
        android:textSize="25dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="3dp"
        android:background="#FFFACC"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/txtGoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" · 목표액 : "
            android:textColor="#333"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/txtSale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#333"
                android:text=" · 매출액 : " />

            <TextView
                android:id="@+id/txtRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="달성율 : 0 %"
                android:textColor="#880000" />

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtMon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8/28"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textColor="#333"/>

                <Button
                    android:id="@+id/btnMonreport"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_margin="0dp"
                    android:padding="0dp"
                    android:text="보고서"
                    android:drawableLeft="@drawable/ic_daily_search_file"
                    android:background="#FAFAFA"
                    style="?android:attr/borderlessButtonStyle"/>
            </LinearLayout>

            <TextView
                android:id="@+id/txtMonPlan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:textColor="#333"
                android:background="@drawable/txt_underline"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtTues"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8/28"
                    android:textStyle="bold"
                    android:textColor="#333"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/btnTuesreport"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_margin="0dp"
                    android:padding="0dp"
                    android:text="보고서"
                    android:drawableLeft="@drawable/ic_daily_search_file"
                    android:background="#FAFAFA"
                    style="?android:attr/borderlessButtonStyle"/>
            </LinearLayout>
            <TextView
                android:id="@+id/txtTuesPlan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:textColor="#333"
                android:background="@drawable/txt_underline"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtWed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8/28"
                    android:textStyle="bold"
                    android:textColor="#333"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/btnWedreport"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_margin="0dp"
                    android:padding="0dp"
                    android:text="보고서"
                    android:drawableLeft="@drawable/ic_daily_search_file"
                    android:background="#FAFAFA"
                    style="?android:attr/borderlessButtonStyle"/>
            </LinearLayout>
            <TextView
                android:id="@+id/txtWedPlan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:textColor="#333"
                android:background="@drawable/txt_underline"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtThurs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8/28"
                    android:textStyle="bold"
                    android:textColor="#333"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/btnThursreport"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_margin="0dp"
                    android:padding="0dp"
                    android:text="보고서"
                    android:drawableLeft="@drawable/ic_daily_search_file"
                    android:background="#FAFAFA"
                    style="?android:attr/borderlessButtonStyle"/>
            </LinearLayout>
            <TextView
                android:id="@+id/txtThursPlan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:textColor="#333"
                android:background="@drawable/txt_underline"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtFri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8/28"
                    android:textStyle="bold"
                    android:textColor="#333"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/btnFrireport"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_margin="0dp"
                    android:padding="0dp"
                    android:text="보고서"
                    android:drawableLeft="@drawable/ic_daily_search_file"
                    android:background="#FAFAFA"
                    style="?android:attr/borderlessButtonStyle"/>
            </LinearLayout>
            <TextView
                android:id="@+id/txtFriPlan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="10dp"
                android:textColor="#333"
                android:background="@drawable/txt_underline"/>
        </LinearLayout>


    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CANCEL"
            android:backgroundTint="#ffffff"
            android:textColor="@color/btn_cancel_text"/>

        <Button
            android:id="@+id/btnModify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="modify"
            android:backgroundTint="#ffffff"/>

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#ffffff"
            android:textColor="@color/sms_red"
            android:text="delete" />

    </LinearLayout>


</LinearLayout>

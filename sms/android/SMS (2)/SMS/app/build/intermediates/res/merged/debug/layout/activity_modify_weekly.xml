<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.example.bit_user.sms.ModifyWeeklyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/txt_underline"
        android:paddingBottom="12dp">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/txtDep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_basic"
                android:text=" department" />
            <TextView
                android:id="@+id/txtLeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_basic"
                android:layout_weight="1"
                android:text=" Leader" />

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_basic"
                android:text=" name" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_basic"
                android:layout_weight="1"
                android:text=" date" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="1dp"
        >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제목 "
            android:textColor="#333"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/calDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_weight="1"/>
        <!--icon calendar/check-->
        <Button
            android:id="@+id/btnCalendar"
            android:layout_width="65dp"
            android:layout_height="23dp"
            android:layout_marginRight="1dp"
            android:padding="0dp"
            android:text="달력"
            android:drawableLeft="@drawable/ic_select_calendar"
            android:background="@drawable/buttonbox_gray"
            style="?android:attr/borderlessButtonStyle"
            android:paddingRight="10dp"/>

        <Button
            android:id="@+id/btnChoiceDate"
            android:layout_width="65dp"
            android:layout_height="23dp"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:text="선택"
            android:drawableLeft="@drawable/ic_check_red"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/buttonbox_gray" />

    </LinearLayout>


    <EditText
        android:id="@+id/editTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_box"
        android:paddingLeft="5dp"
        android:textSize="23dp"
        android:text="[주간 계획]"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="목표액"
        android:textColor="#333"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/txt_underline"
        android:paddingBottom="15dp" >

        <TextView
            android:id="@+id/editGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/sms_red"
            android:paddingLeft="5dp"
            android:text="0"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/sms_red"
            android:text=" 원"
            android:layout_weight="1"
            android:paddingLeft="5dp" />

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="월"
                android:textStyle="bold"
                android:textColor="#333"
                android:id="@+id/dateMon"
                android:layout_weight="1"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:padding="3dp"
                android:background="#FFFCE2">

                <EditText
                    android:id="@+id/goalMon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/edit_text"
                    android:inputType="number"
                    android:hint="예상 매출액"/>


                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <EditText
                        android:id="@+id/editMon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Input Text Here"
                        android:background="@drawable/edit_content_box"
                        android:paddingLeft="5dp"
                        android:textColorHint="@color/edit_content_text"
                        />

                </ScrollView>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="화"
                android:textStyle="bold"
                android:textColor="#333"
                android:id="@+id/dateTues"
                android:layout_weight="1"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:padding="3dp"
                android:background="#FFFCE2">
                <EditText
                    android:id="@+id/goalTues"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/edit_text"
                    android:inputType="number"
                    android:hint="예상 매출액"/>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <EditText
                        android:id="@+id/editTues"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Input Text Here"
                        android:background="@drawable/edit_content_box"
                        android:paddingLeft="5dp"
                        android:textColorHint="@color/edit_content_text"
                        android:layout_marginBottom="5dp"
                        />

                </ScrollView>
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수"
                android:textStyle="bold"
                android:textColor="#333"
                android:id="@+id/dateWed"
                android:layout_marginTop="10dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:padding="3dp"
                android:background="#FFFCE2">

                <EditText
                    android:id="@+id/goalWed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/edit_text"
                    android:inputType="number"
                    android:hint="예상 매출액"/>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <EditText
                        android:id="@+id/editWed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Input Text Here"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/edit_content_box"
                        android:paddingLeft="5dp"
                        android:textColorHint="@color/edit_content_text"
                        />

                </ScrollView>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="목"
                android:textStyle="bold"
                android:textColor="#333"
                android:layout_marginTop="10dp"
                android:id="@+id/dateThurs"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:padding="3dp"
                android:background="#FFFCE2">


                <EditText
                    android:id="@+id/goalThurs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/edit_text"
                    android:inputType="number"
                    android:hint="예상 매출액"/>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <EditText
                        android:id="@+id/editThurs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Input Text Here"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/edit_content_box"
                        android:paddingLeft="5dp"
                        android:textColorHint="@color/edit_content_text"
                        />

                </ScrollView>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="금"
                android:textStyle="bold"
                android:textColor="#333"
                android:id="@+id/dateFri"
                android:layout_marginTop="10dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:padding="3dp"
                android:background="#FFFCE2">


                <EditText
                    android:id="@+id/goalFri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textColorHint="@color/edit_text"
                    android:hint="예상 매출액"/>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <EditText
                        android:id="@+id/editFri"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Input Text Here"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/edit_content_box"
                        android:paddingLeft="5dp"
                        android:textColorHint="@color/edit_content_text"
                        />

                </ScrollView>
            </LinearLayout>


        </LinearLayout>

    </ScrollView>




    <LinearLayout
        android:id="@+id/layout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:weightSum="2"
        >
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CANCEL"
            android:backgroundTint="#ffffff"
            android:textColor="@color/btn_cancel_text"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SUBMIT"
            android:backgroundTint="#ffffff"
            android:textColor="@color/sms_red"
            android:layout_weight="1"
            />

    </LinearLayout>

</LinearLayout>

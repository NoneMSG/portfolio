<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.example.bit_user.sms.ModifyDailyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/txt_underline"
        android:paddingBottom="12dp">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp">

            <TextView
            android:id="@+id/txtDep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_basic"
            android:text=" department" />

            <TextView
                android:id="@+id/txtLeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_basic"
                android:layout_weight="1"
                android:text=" Leader" />

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_basic"
                android:text=" name" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_basic"
                android:layout_weight="1"
                android:text=" date" />

        </LinearLayout>

    </LinearLayout>

        <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="제목  "
                    android:textColor="#333"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"/>


                <TextView
                    android:id="@+id/calDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btnCalendar"
                    android:layout_width="65dp"
                    android:layout_height="23dp"
                    android:layout_marginRight="1dp"
                    android:padding="0dp"
                    android:text="달력"
                    android:drawableLeft="@drawable/ic_select_calendar"
                    android:background="@drawable/buttonbox_gray"
                    style="?android:attr/borderlessButtonStyle"
                    android:paddingRight="10dp"/>

                <Button
                    android:id="@+id/btnChoiceDate"
                    android:layout_width="65dp"
                    android:layout_height="23dp"
                    android:layout_margin="0dp"
                    android:padding="0dp"
                    android:text="선택"
                    android:drawableLeft="@drawable/ic_check_red"
                    style="?android:attr/borderlessButtonStyle"
                    android:background="@drawable/buttonbox_gray" />

            </LinearLayout>

            <EditText
                android:id="@+id/editTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_box"
                android:paddingLeft="5dp"
                android:textSize="23dp"
                android:text="[일일 보고서]" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:padding="3dp"
                android:background="#FFFCE2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="매출액"
                        android:textColor="#333"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/txtGoal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="#A8A6A6"
                        android:layout_weight="1"/>

                    <EditText
                        android:id="@+id/editTxtGoal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="#A8A6A6"
                        android:layout_weight="1"
                        android:textSize="17dp"
                        android:inputType="number"
                        android:layout_marginLeft="5dp"
                        android:background="@null"
                        android:hint=" 목표액을 설정해 주세요."
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/txtRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textStyle="italic"
                        android:textColor="#AB5656"/>

                </LinearLayout>

                <EditText
                    android:id="@+id/editSale"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="매출액을 입력해 주세요."
                    android:textColorHint="@color/edit_text"
                    android:background="@drawable/edit_text_box"
                    android:paddingLeft="5dp"
                    android:inputType="number"/>


                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="출근 계기판(km)"
                    android:textColor="#333"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editStartMeasure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/edit_text"
                    android:background="@drawable/edit_text_box"
                    android:paddingLeft="5dp"
                    android:hint="출근 계기판을 입력해 주세요"
                    android:inputType="number" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="퇴근 계기판(km)"
                        android:textColor="#333"
                        android:textStyle="bold"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/txtDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:textColor="#AB5656"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="15dp">

                    <EditText
                        android:id="@+id/editEndMeasure"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/edit_text"
                        android:background="@drawable/edit_text_box"
                        android:paddingLeft="5dp"
                        android:hint="퇴근 계기판을 입력해 주세요"
                        android:inputType="number"/>

                </LinearLayout>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="업무보고 "
                android:paddingBottom="2dp"
                android:textStyle="bold"
                android:textColor="#333"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit_line"

                />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_content_box"
                >

                <EditText
                    android:id="@+id/editDailyReport"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Input Text Here"
                    android:background="@null"
                    android:layout_margin="10dp"
                    android:textColorHint="@color/edit_content_text"
                    />

            </ScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="상담일지 "
                    android:paddingBottom="2dp"
                    android:textColor="#333"
                    android:background="@drawable/edit_line"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>


                <Button
                    android:id="@+id/btnaddConsult"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="0dp"
                    android:padding="0dp"
                    android:background="@drawable/ic_add_black" />

            </LinearLayout>

            <ListView
                android:id="@+id/listConsultation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff">

            </ListView>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/layout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        >
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CANCEL"
            android:backgroundTint="#ffffff"
            android:textColor="@color/btn_cancel_text"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SUBMIT"
            android:backgroundTint="#ffffff"
            android:textColor="@color/sms_red"
            android:layout_weight="1"
            />

    </LinearLayout>

</LinearLayout>

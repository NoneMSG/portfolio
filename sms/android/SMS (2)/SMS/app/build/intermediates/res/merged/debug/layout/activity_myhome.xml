<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.example.bit_user.sms.MyhomeActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="30dp"
        android:textColor="#333"
        android:text=" MY HOME 설정"
        android:drawableLeft="@drawable/ic_myhome_home"
        android:background="@drawable/txt_underline"
        android:paddingBottom="12dp"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingTop="13dp"
        android:layout_weight="1">

        <RadioButton
            android:id="@+id/radioGraph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="그래프"/>

        <RadioButton
            android:id="@+id/radioCalendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="달력" />

        <RadioButton
            android:id="@+id/radioList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="일지 목록" />

    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cancel"
            android:backgroundTint="#ffffff"
            android:textColor="@color/btn_cancel_text"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btnApply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="apply"
            android:backgroundTint="#ffffff"
            android:textColor="@color/sms_red"
            android:layout_weight="1"/>

    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.admin.gabizo3.MainActivity"
    tools:showIn="@layout/activity_main"
    android:contextClickable="false"
    android:id="@+id/w"
    android:background="#f8eccb">

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:id="@+id/toDraw_Btn"
        android:background="@drawable/change"
        android:textColor="#FFFFFFFF"
        android:layout_below="@+id/btconnect_Btn"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp" />

    <Button
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:text="STAND"
        android:id="@+id/stand_Btn"
        android:layout_below="@+id/speed"
        android:background="@drawable/buttonselector"
        android:textColor="#FFFFFFFF"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="120dp" />

    <Button
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:text="Sit"
        android:id="@+id/sit_Btn"
        android:layout_below="@+id/stand_Btn"
        android:background="@drawable/buttonselector"
        android:textColor="#FFFFFFFF"
        android:layout_alignLeft="@+id/stand_Btn"
        android:layout_alignStart="@+id/stand_Btn"
        android:layout_marginTop="10dp" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:id="@+id/btconnect_Btn"
        android:layout_below="@+id/mode_Btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="11dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bluetooth_logo4"
        android:textColor="#FFFFFFFF"
        android:layout_marginRight="20dp" />

    <Button
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:id="@+id/mode_Btn"
        android:textSize="12.5dp"
        android:textColor="#FFFFFFFF"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/speed"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp" />

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="325dp"
        android:id="@+id/control"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:background="@drawable/controller"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp">

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/go_Btn"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="#00000000"
            android:layout_marginTop="25dp" />

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/right_Btn"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="false"
            android:layout_centerVertical="true"
            android:layout_marginRight="34dp"
            android:background="#00000000" />

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/back_Btn"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dp"
            android:background="#00000000" />

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/left_Btn"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="false"
            android:layout_centerVertical="true"
            android:layout_marginLeft="33dp"
            android:background="#00000000" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:id="@+id/speed"
        android:layout_below="@+id/currentstate"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp">

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="1"
            android:id="@+id/speed_Btn1"
            android:textColor="#FFFFFF" />

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="2"
            android:id="@+id/speed_Btn2"
            android:textColor="#FFFFFF" />

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="3"
            android:id="@+id/speed_Btn3"
            android:textColor="#FFFFFF" />

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="4"
            android:id="@+id/speed_Btn4"
            android:textColor="#FFFFFF" />

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="5"
            android:id="@+id/speed_Btn5"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/currentstate"
        android:background="@drawable/paintbg"
        android:textStyle="bold|italic"
        android:textSize="20dp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="107dp" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:id="@+id/speedstate"
        android:background="@drawable/paintbg"
        android:textStyle="bold|italic"
        android:textSize="15dp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp" />

    <Button
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:text="Tail UP"
        android:id="@+id/tailup_Btn"
        android:layout_below="@+id/sit_Btn"
        android:textSize="10dp"
        android:background="@drawable/buttonselector"
        android:textColor="#FFFFFFFF"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/sit_Btn" />

    <Button
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:text="Tail DOWN"
        android:id="@+id/taildown_Btn"
        android:layout_below="@+id/tailup_Btn"
        android:textSize="10dp"
        android:background="@drawable/buttonselector"
        android:textColor="#FFFFFFFF"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/tailup_Btn" />


</RelativeLayout>
